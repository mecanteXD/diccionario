import time
meme_dict = {
    "CRINGE": "Algo excepcionalmente raro o embarazoso",
    "LOL": "Una respuesta común a algo gracioso",
    "ROFL": "Una respuesta a una broma",
    "SHEESH": "Ligera desaprobación",
    "CREEPY": "Aterrador, siniestro",
    "AGGRO": "Ponerse agresivo/enojado",
}

print("¡Hola! Bienvenido al diccionario de memes.")
time.sleep(2)
print("Puedes preguntar por el significado de 5 palabras.")
time.sleep(2)
print("Escribe la palabra en MAYÚSCULAS. ¡Comencemos!\n")

for i in range(5):
    word = input("Escribe una palabra que no entiendas (¡con mayúsculas!): ")
    
    if word in meme_dict:
        print(word + ": " + meme_dict[word] + "\n")
    else:
        print("Lo siento, no conozco el significado de '" + word + "'.\n")

print("¡Gracias por usar el diccionario de memes!")